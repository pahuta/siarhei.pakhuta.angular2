{
  "compilerOptions": {
    "baseUrl": "./src",
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": true,
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": [
      "ES2015",
      "DOM"
    ],
    "types": [
      "core-js",
      "googlemaps",
      "moment",
      "whatwg-fetch",
      "node",
      "lodash"
    ]
  },
  "files": [
    "src/app/app.module.ts",
    "src/main-aot.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "aot",
    "skipMetadataEmit" : true
  }
}
